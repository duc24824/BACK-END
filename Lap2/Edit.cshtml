@{
    ViewData["Title"] = "Edit Task";
    var taskId = ViewBag.TaskId;
    var taskName = ViewBag.TaskName as string;
}

<h1>Edit Task</h1>

<form method="post" action="/Todo/Edit">
    <input type="hidden" name="id" value="@taskId" />
    <div class="mb-3">
        <label for="taskName" class="form-label">Task Name</label>
        <input type="text" class="form-control" id="taskName" name="taskName" value="@taskName" required />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a href="/Todo/Index" class="btn btn-secondary">Cancel</a>
</form>
