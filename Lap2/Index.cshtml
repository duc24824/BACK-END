@model List<string>

@{
    ViewData["Title"] = "Todo List";
}

<h1>Todo List</h1>
<a href="/Todo/Add" class="btn btn-primary mb-3">Add Task</a>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>STT</th>
            <th>Task</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i]</td>
                <td>
                    <a href="/Todo/Edit/@i" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Todo/Delete/@i" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
